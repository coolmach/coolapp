<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.multipart.maxSize" value="1000000" />

	<package name="default" extends="struts-default,json-default" namespace="/">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
			<result-type name="imageResult" class="com.cbuddy.result.ImageResult" />
		</result-types>
		<interceptors>
			<interceptor name="loginInterceptor" class="com.login.interceptors.LoginInterceptor"></interceptor>
			<interceptor-stack name="secureStack">
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
       				<param name="exception.logLevel">ERROR</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<global-results>  
			<result name="myresult">exception.jsp</result>  
		</global-results>  
		  
		<global-exception-mappings>  
		<exception-mapping result="myresult" exception="java.lang.Exception"></exception-mapping>  
		</global-exception-mappings>  	
		
		<action name="">
			<result type="tiles">/home.tiles</result>
		</action>
		<action name="mylogin" class="com.cbuddy.action.user.LoginAction" method="myLogin">
		    <result name="input" type="tiles">/login.tiles</result>
			<result name="success" type="tiles">/login.tiles</result>
		</action>
		<action name="signup" class="com.cbuddy.action.user.LoginAction" method="signUp">
		    <result name="error" type="tiles">/login.tiles</result>
		    <result name="input" type="tiles">/login.tiles</result>
		     <result name="success" type="tiles">/home.tiles</result>
		</action>
		<action name="login" class="com.cbuddy.action.user.LoginAction">
			<result name="success" type="tiles">/userdashboard.tiles</result>
			<result name="input" type="tiles">/login.tiles</result>
		</action>	
		<action name="logout" class="com.cbuddy.action.user.LogOutAction" method="logout"> 
			<result name="success" type="tiles">/home.tiles</result> 
			<result name="input" type="tiles">/home.tiles</result> 
		</action> 
		
		<!-- REAL_ESTATE - START -->
		<action name="realestate" class="com.cbuddy.action.posts.RealEstateAction" method="getAdListForRealEstate">
			<result name="success" type="tiles">/realestate.tiles</result>
		</action>
		<action name="realestateFilter" class="com.cbuddy.action.posts.RealEstateAction" method="getAdListForRealEstate">
			<result name="success">/AdList_RealEstate.jsp</result>
		</action>
		<action name="addetails" class="com.cbuddy.action.user.HomeAction" method="getAdDetails">
			<result name="success" type="tiles">/addetails.tiles</result>
		</action>
		<action name="real_estate_postAd" class="com.cbuddy.action.posts.RealEstateAction" method="postAd">
			 <interceptor-ref name="secureStack"></interceptor-ref> 
			 <interceptor-ref name="fileUpload">
                     <param name="allowedTypes">image/jpeg,image/gif,image/png</param>
             </interceptor-ref>
             <interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="login" type="tiles">/home.tiles</result>
			<result name="success" type="tiles">/home.tiles</result>
			<!--result name="redirect" type="redirect">/</result-->
			<result name="input" type="tiles">/postad_real_estate.tiles</result>
		</action>
		<!-- REAL_ESTATE - END -->
		
		<!-- AUTOMOBILES - START -->
		<action name="automobile" class="com.cbuddy.action.posts.AutomobileAction" method="getAdListForAutomobile">
			<result name="success" type="tiles">/automobile.tiles</result>
		</action>
		<action name="automobileFilter" class="com.cbuddy.action.posts.AutomobileAction" method="getAdListForAutomobile">
			<result name="success">/AdList_Automobile.jsp</result>
		</action>
		<action name="automobile_postAd" class="com.cbuddy.action.posts.AutomobileAction" method="postAd">
			 <interceptor-ref name="secureStack"></interceptor-ref> 
			 <interceptor-ref name="fileUpload">
                     <param name="allowedTypes">image/jpeg,image/gif,image/png</param>
             </interceptor-ref>
             <interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="login" type="tiles">/home.tiles</result>
			<result name="success" type="tiles">/home.tiles</result>
			<result name="input" type="tiles">/postad_automobile.tiles</result>
		</action>
		<!-- AUTOMOBILES - END -->		
		
		
		<action name="postad" class="com.cbuddy.action.posts.PostAdAction">
			<interceptor-ref name="secureStack"></interceptor-ref> 
			<result name="login" type="tiles">/home.tiles</result>
			<result name="success" type="tiles">/home.tiles</result>
			<result name="realEstate" type="tiles">/postad_real_estate.tiles</result>
			<result name="automobile" type="tiles">/postad_automobile.tiles</result>
		</action>		
		<action name="modalLogin" class="com.cbuddy.action.user.LoginAction">
			<result name="input">/login_Retry_Modal_Window.jsp</result>
			<result name="success">/postAdCategories_Section.jsp</result>
		</action>
		<action name="ImageAction" class="com.cbuddy.action.posts.ImageAction">
			<result name="success" type="imageResult"></result>
		</action>
		<action name="getLocation" class="com.cbuddy.action.location.LocationAction" method="getLocations">
			<result name="success">/ajax_Autosuggest_Locations.jsp</result>
		</action>
		<action name="getNeighbor" class="com.cbuddy.action.location.LocationAction" method="getNeighborhood">
			<result name="success">/neighborhood_Locations.jsp</result>
		</action>
		<action name="autoSuggestCorp" class="com.cbuddy.action.user.CorpAction" method="autoPopulateCorporates">
			<result name="success">/ajax_Autosuggest_Corporates.jsp</result>
		</action>							
	</package>
</struts>